<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <%= @book.errors.count %> error prohibited this product from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="error_message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book, local: true do |f| %>
    <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
    </div>
    <div class="actions">
    <%= f.submit 'Update Book' %>
    </div>
<% end %>

<%= link_to "Show", book_path, class:"link-text" %>
